@model IEnumerable<ProductListingServiceModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="create">
    <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
        Add new &#32<i class="fas fa-plus-circle fa-1x"></i>
    </a>
</div>
<div class="container-fluid">
    <div class="row fh5co-post-entry">
        @foreach (var product in Model)
        {
            <article class="col-lg-3 col-md-3 col-sm-3 col-xs-6 col-xxs-12 animate-box">
                <figure>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                        <img src="@product.ImagePath" alt="Image" class="img-responsive">
                    </a>
                </figure>
                <span class="fh5co-meta"><a href="single.html">@product.Title</a></span>
                <h2 class="fh5co-article-title"><a href="single.html">@product.Price &euro;</a></h2>
                <span class="fh5co-meta fh5co-date">@product.DateOfAdded.ToLocalTime()</span>
            </article>
            <div class="clearfix visible-xs-block"></div>
        }
    </div>
</div>
